	<section class="js-figures container pictures">
	  <div class="col-xs-12">
	    <div class="gallery clearfix">

	      {% for picture in data.pictures %}
	        {% if loop.index == 3 or loop.index == 8 %}

	          {% if picture.tag == "video" %}
	          	<div class="js-figure video-figure img-block-link col-md-6" href="http://www.dailymotion.com/embed/video/{{picture.field_video_ens_value}}" data-fancybox="group" thematique="{{picture.tag}}" data-caption="A découvrir sur : <a href='{{picture.url_alias}}'>{{picture.title}}</a>">
          	  {% else %}
	          	<div class="js-figure img-block-link col-md-6" href="{{picture.uri}}" data-fancybox="group" thematique="{{picture.tag}}" data-caption="A découvrir sur : <a href='{{picture.url_alias}}'>{{picture.title}}</a> <br> {{picture.field_gallery_alt}}">
	          {% endif %}

	        {% else %}

	          {% if picture.tag == "video" %}
	          	<div class="js-figure video-figure img-block-link col-md-3" href="http://www.dailymotion.com/embed/video/{{picture.field_video_ens_value}}" data-fancybox="group" thematique="{{picture.tag}}" data-caption="A découvrir sur : <a href='{{picture.url_alias}}'>{{picture.title}}</a>">
	          {% else %}
	          	<div class="js-figure img-block-link col-md-3" href="{{picture.uri}}" data-fancybox="group" thematique="{{picture.tag}}" data-caption="A découvrir sur : <a href='{{picture.url_alias}}'>{{picture.title}}</a> <br> {{picture.field_gallery_alt}}">
	          {% endif %}

	        {% endif %}

	            {% if picture.tag == "video" %}
	            	<div class="bg bg-video {{ picture.field_video_ens_value }}" >
	            	</div>
	            {% else %}
	            	<div class="bg" style="background: url( {{picture.uri}} )"></div>
	            {% endif %}

	            <div class="abs">
	              <!-- <a href="{# url('<front>') #}{#picture.url_alias#}"> -->
	              <div class="zoom">
	                <div>
	                  <h2>{{picture.field_gallery_title}}</h2>
	                  <span class="credit">
	                  <!-- {% if picture.field_gallery_alt != "" %}
	                  	{{picture.field_gallery_alt}}
	                  {% endif %} -->
	                  </span>
	                </div>
	                <figcaption>
	                    {{picture.field_gallery_title}}
	                </figcaption>
	              </div>
	              <!-- </a> -->
	            </div>
	        </div>
	      {% endfor %}

	    </div>
	  </div>
	</section>

	</div>
</section>

<script>
  // encode data for use in js file (themes/bootstrap_aveyron/scripts/script-gallery.js)
  var videos = {{ data.videos|json_encode()|raw }};
</script>